{
  "name": "lyfter/multisite-url-fixer",
  "type": "wordpress-muplugin",
  "license": "MIT",
  "description":
    "Fixes WordPress issues with home and site URL on multisite when using Bedrock",
  "homepage": "https://lyfter.nl",
  "keywords": ["wordpress"],
  "support": {
    "issues": "https://github.com/lyfter/multisite-url-fixer/issues",
  },
  "autoload": {
    "psr-4": {
      "Roots\\Bedrock\\": "src/"
    }
  },
  "require": {
    "php": ">=7.0.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.1"
  },
  "scripts": {
    "test": ["phpcs --ignore=vendor --extensions=php --standard=PSR2 ."]
  }
}
